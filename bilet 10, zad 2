#include  <iostream>
#include <ctime>
using namespace std;
int vvod(int** mas, int n) {
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			mas[i][j] = rand() % 10;
		}
	}
	return 0;
}
int viy(int** mas, int n) {
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			cout << mas[i][j] << " ";
		}
		cout << endl;
	}
	return 0;
}
int main() {
	setlocale(LC_ALL, "Rus");
	srand(time(0));
	int n;
	cin >> n;
	int** mas = new int* [n];
	for (int i = 0; i < n; i++) {
		mas[i] = new int[n];
	}
	vvod(mas, n);
	viy(mas, n);
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			if ((i >= j)|| (i + j >= n - 1)) {
				mas[i][j] = 0;
				
			}
		}
	}
	viy(mas, n);
	for (int i = 0; i < n; i++) {
		delete[] mas[i];
	}
	delete[] mas;
}
